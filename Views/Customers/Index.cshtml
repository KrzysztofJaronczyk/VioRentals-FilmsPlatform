
@model IEnumerable<VioRentals.Models.Customer>

@{
    ViewBag.Title = "Customers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>
<p>
    @Html.ActionLink("New Customer", "New", "Customers", null, new { @class = "btn btn-primary" })
</p>

@if (!Model.Any())
{
    <p>We don't have any customers yet.</p>
}
else
{

    
    <table id="customers" class="table table-bordered table-hover">
        <thead>
        <tr>
            <th>Customer</th>
            <th>Discount Rate</th>
            <th>Membership Type</th>
            <th>Delete</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(customer.Name+" "+customer.Surname, "Edit", "Customers", new { id = customer.Id }, null)
                </td>
                <td>
                    @customer.MembershipType.DiscountRate%
                </td>
                <td>
                    @customer.MembershipType.Name
                </td>
                <td>
                        <button class="btn btn-warning" onclick="deleteCustomer(@customer.Id)">Delete</button>
                </td>
            </tr>
        }
        </tbody>
    </table>
    <div class="modal">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirmation</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true"></span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>You are about to delete this customer. Are you sure?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" id="confirm" class="btn btn-primary">Delete</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
}


@*remove customer from the table row and the database
*@    

<script>
    function deleteCustomer(id) {
        //document.querySelector('.modal').style.display = 'block';
        setTimeout(function () {
            $('.modal').fadeIn(1500);
        });
        document.querySelector('#confirm').onclick = function () {
            fetch('/api/customers/' + id, { method: 'DELETE' })
                .then(response => {
                    if (response.ok) {
                        location.reload();
                    }
                })
                .catch(error => {
                    console.error(error);
                });
        }
    }
    // Adding click event to close button
    document.querySelector('.btn-close').addEventListener('click', () => {
        setTimeout(function () {
            $('.modal').fadeOut(1500);
        });
    });
    document.querySelector('.btn.btn-secondary').addEventListener('click', () => {
        setTimeout(function () {
            $('.modal').fadeOut(1500);
        });
    });
</script>





