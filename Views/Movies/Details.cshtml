@model VioRentals.Models.Movie

@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<ul>
    <li>Movie name: @Html.DisplayFor(model => model.Name)</li>
    <li>Genre: @Html.DisplayFor(model => model.Genre)</li>
    <li>Release date: @Model.ReleaseDate.ToShortDateString()</li>
    <li>Added date: @Model.DateAdded.ToShortDateString()</li>
    <li>Number in stock: @Html.DisplayFor(model => model.NumberInStock)</li>
</ul>
